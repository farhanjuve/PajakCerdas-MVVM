<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".review">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:text="Nilai property sebesar"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Rp x.xxx.xxx"
            android:textColor="#0C72FF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/view1"
            android:layout_width="249dp"
            android:layout_height="1dp"
            android:layout_below="@id/text2"
            android:layout_centerHorizontal="true"
            android:background="@android:color/darker_gray"
            android:elevation="1dp" />
        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:text="Nilai Jual Kena Pajak sebesar"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Rp x.xxx.xxx"
            android:textColor="#0C72FF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/view2"
            android:layout_width="249dp"
            android:layout_height="1dp"
            android:layout_below="@id/text4"
            android:layout_centerHorizontal="true"
            android:background="@android:color/darker_gray"
            android:elevation="1dp" />
        <TextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view2"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:text="PBB yang harus dibayarkan"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Rp x.xxx.xxx"
            android:textColor="#0C72FF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/view3"
            android:layout_width="249dp"
            android:layout_height="1dp"
            android:layout_below="@id/text6"
            android:layout_centerHorizontal="true"
            android:background="@android:color/darker_gray"
            android:elevation="1dp" />

        <Button
            android:id="@+id/btn1"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/view3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="#F57F17"
            android:text="Buat Baru"
            android:textColor="#ffff" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="#F57F17"
            android:text="Lihat Database"
            android:textColor="#ffff" />
    </RelativeLayout>
</LinearLayout>